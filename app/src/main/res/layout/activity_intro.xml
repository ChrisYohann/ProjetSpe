<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#B0F2B6">

    <TextView
        android:id="@+id/chaton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/ChatOn"

        android:layout_centerHorizontal="true"

        android:textSize="45dp"
        android:textColor="#3CB371">

    </TextView>

    <TextView
        android:id="@+id/Bienvenue"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Bienvenue !"

        android:layout_centerHorizontal="true"

        android:textSize="20dp"
        android:textColor="#3CB371"
        android:layout_below="@+id/chaton"
        android:layout_marginTop="8dp"/>

    /TextView>

    <TextView
        android:id="@+id/bravo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Veuillez renseigner un pseudo !"

        android:layout_centerHorizontal="true"

        android:textSize="20dp"
        android:textColor="#3CB371"
        android:layout_below="@+id/Bienvenue"
        android:layout_marginTop="8dp"/>

    <Button

        android:id="@+id/buttonpseudo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/valider"
        android:layout_centerInParent="true"

        android:layout_centerHorizontal="true"

        android:textSize="35dp"
        android:background="#3CB371"

        android:textColor="#B0F2B6">
    </Button>

    <EditText
        android:id="@+id/pseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Pseudo"
        android:lines="1"
        android:textSize="35dp"
        android:layout_above="@+id/buttonpseudo"
        android:layout_centerInParent="true"
        />





</RelativeLayout>
