<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#B0F2B6">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/ChatOn"
        android:layout_centerHorizontal="true"
        android:textSize="100dp"
        android:textColor="#3CB371">

    </TextView>
    <Button android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="@string/Find"
        android:id="@+id/buttonFind"
        android:background="#3CB371"
        android:textSize="50dp"
        android:textColor="#B0F2B6"
        android:layout_centerInParent="true">
    </Button>
    <Button android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="Socket"
        android:layout_below="@+id/buttonFind"
        android:id="@+id/buttonsocket"
        android:background="#3CB371"
        android:textSize="50dp"
        android:textColor="#B0F2B6"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true">
    </Button>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />
    <EditText
        android:id="@+id/messages"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez le message ici"
        android:inputType="textMultiLine"
        android:lines="1"
        android:layout_alignParentBottom="true"
        />
    <Button android:layout_width="50dp"
        android:layout_height="10dp"
        android:text="Envoyer"
        android:id="@+id/buttonEnvoyer"
        android:background="#3CB371"
        android:textSize="5dp"
        android:textColor="#B0F2B6"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/messages">
    </Button>





</RelativeLayout>
